# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/doing_is_fun

# JWT Secrets (REQUIRED - Generate strong secrets for production)
TOKEN_SECRET=your-super-secret-jwt-access-token-key-at-least-32-characters-long
REFRESH_SECRET=your-super-secret-jwt-refresh-token-key-at-least-32-characters-long

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Redis Configuration (Optional - defaults to localhost)
REDIS_URL=redis://127.0.0.1:6379
REDIS_DB=0
REDIS_TLS=false

# Security Settings
COOKIE_SECURE=false
RATE_LIMIT_SECRET=your-rate-limit-secret-key

# Environment
NODE_ENV=development
APP_ENV=dev

# PostgreSQL SSL (Optional - for production)
PGSSLMODE=disable
